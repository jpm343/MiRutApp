<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="330dp"
    android:paddingEnd="20dp"
    android:paddingStart="20dp"
    android:paddingBottom="20dp"
    android:paddingTop="20dp">

    <TextView
        android:id="@+id/textViewPatente"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:text="Patente:"
        android:textColor="#616161"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/textViewPatenteInfo"
        android:layout_width="163dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="38dp"
        android:layout_toEndOf="@+id/textViewPatente"
        android:background="@drawable/edit_text_bottom_border"
        android:text=""
        android:gravity="center"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Small" />

    <TextView
        android:id="@+id/textViewAlias"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="38dp"
        android:gravity="center"
        android:text="Alias:"
        android:textColor="#616161"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/textViewAliasInfo"
        android:layout_width="163dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="38dp"
        android:layout_toEndOf="@+id/textViewAlias"
        android:background="@drawable/edit_text_bottom_border"
        android:text=""
        android:gravity="center"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Small" />

    <TextView
        android:id="@+id/textViewTipo"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="76dp"
        android:gravity="center"
        android:text="Tipo de vehículo:"
        android:textColor="#616161"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/textViewTipoInfo"
        android:layout_width="163dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="38dp"
        android:layout_toEndOf="@+id/textViewTipo"
        android:background="@drawable/edit_text_bottom_border"
        android:text=""
        android:gravity="center"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Small" />

    <TextView
        android:id="@+id/textViewSello"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="114dp"
        android:gravity="center"
        android:text="Sello Verde:"
        android:textColor="#616161"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/textViewSelloInfo"
        android:layout_width="163dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="114dp"
        android:layout_marginEnd="38dp"
        android:layout_toEndOf="@+id/textViewSello"
        android:background="@drawable/edit_text_bottom_border"
        android:text=""
        android:gravity="center"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Small" />

    <TextView
        android:id="@+id/textViewRevTec"
        android:layout_width="80dp"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="152dp"
        android:gravity="center"
        android:text="Revisión Técnica:"
        android:textColor="#616161"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/textViewRevTecInfo"
        android:layout_width="163dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="158dp"
        android:layout_marginEnd="38dp"
        android:layout_toEndOf="@+id/textViewRevTec"
        android:background="@drawable/edit_text_bottom_border"
        android:text=""
        android:gravity="center"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Small" />

    <TextView
        android:id="@+id/textViewRestriccion"
        android:layout_width="80dp"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="190dp"
        android:gravity="center"
        android:text="Restricción Vehicular:"
        android:textColor="#616161"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/textViewRestriccionInfo"
        android:layout_width="163dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="198dp"
        android:layout_marginEnd="38dp"
        android:layout_toEndOf="@+id/textViewRestriccion"
        android:background="@drawable/edit_text_bottom_border"
        android:text=""
        android:gravity="center"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Small" />

    <Button
        android:id="@+id/buttonVolver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        android:text="Volver" />
</RelativeLayout>